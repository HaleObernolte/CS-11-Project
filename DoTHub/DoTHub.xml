<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="DoTHub.lua"/>

	<Frame name="DoTHubDebuffFrameTemplate" virtual="true" enableMouse="true">
		<Size x="32" y="32"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" setAllPoints="true"/>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="Border" file="Interface\Buttons\UI-Debuff-Overlays">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-1" y="1"/>
						<Anchor point="BOTTOMRIGHT" x="1" y="-1"/>
					</Anchors>
					<TexCoords left="0.296875" right="0.5703125" top="0" bottom="0.515625"/>
				</Texture>
				<FontString parentKey="Countdown" inherits="NumberFontNormalSmall" justifyH="RIGHT">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="5" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Cooldown parentKey="Cooldown" inherits="CooldownFrameTemplate" hideCountdownNumbers="false" reverse="true" drawEdge="true">
				<Anchors>
					<Anchor point="CENTER" x="0" y="-1"/>
				</Anchors>
			</Cooldown>
		</Frames>
	</Frame>

	<Frame name="DoTHubUnitFrameTemplate" mixin="DoTHubUnitFrameMixin" virtual="true">
		<Size x="232" y="100"/>
		<Layers>
			<Layer level="BORDER">
				<FontString parentKey="Name" inherits="GameFontNormalSmall">
					<Size x="232" y="10"/>
					<Anchors>
						<Anchor point="CENTER" x="-50" y="19"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnUpdate method="OnUpdate"/>
		</Scripts>
	</Frame>

	<Frame name="DoTHubFrame" parent="UIParent" enableMouse="true" movable="true" mixin="DoTHubFrameMixin">
		<Size x="300" y="120"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="TopSeparator" parentArray="Textures" hidden="true">
					<Size x="250" y="1"/>
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="-30"/>
					</Anchors>
					<Color r="0.25" g="0.25" b="0.25"/>
				</Texture>
				<Texture parentKey="BottomSeparator" parentArray="Textures" hidden="true">
					<Size x="250" y="1"/>
					<Anchors>
						<Anchor point="BOTTOM" x="0" y="20"/>
					</Anchors>
					<Color r="0.25" g="0.25" b="0.25"/>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="BG" inherits="DialogBorderTemplate" parentArray="Textures" hidden="true"/>
			<Frame parentKey="Header" inherits="DialogHeaderTemplate" parentArray="Textures" hidden="true">
				<KeyValues>
					<KeyValue key="textString" value="DOT_HUB" type="global"/>
				</KeyValues>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEvent method="OnEvent"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnDragStart method="OnDragStart"/>
			<OnDragStop method="OnDragStop"/>
		</Scripts>
	</Frame>

</Ui>